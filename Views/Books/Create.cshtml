@model AspnetcoreCRUDApp.Models.Student;


<form asp-action="Create" asp-area="Books" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" type="text" class="form-control required" placeholder="Enter book title">
            </div>
             <div class="form-group">
                <label>Class:</label>
                <input asp-for="Class" type="text" class="form-control required" placeholder="Enter book title">
            </div> <div class="form-group">
                <label>Roll No:</label>
                <input asp-for="RollNo" type="text" class="form-control required" placeholder="Enter book title">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"> </div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Book</button>
                    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>